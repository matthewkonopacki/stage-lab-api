{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "format",
         "command": "dotnet",
         "args": ["csharpier", "format", "apps/api"],
         "include": ["apps/api/**/*.cs"]
      },
      {
         "name": "build",
         "command": "dotnet",
         "args": ["build", "apps/api/StageLabApi.csproj", "--no-restore"],
         "include": ["apps/api/**/*.cs", "apps/api/**/*.csproj"]
      }
   ]
}
